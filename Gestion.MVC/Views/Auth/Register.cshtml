
@model Gestion.Modelos.Usuario
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro de Usuario</h2>

<form method="post" asp-action="Register" asp-controller="Auth">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All"></div>

    <div>
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" type="text" required />
        <span asp-validation-for="Nombre"></span>
    </div>

    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" type="email" required />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="Password">Contraseña:</label>
        <input asp-for="Password" type="password" required />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <input type="submit" value="Registrarse" />
    </div>

    <div>
        <p>¿Ya tienes cuenta? <a asp-action="Login" asp-controller="Auth">Inicia sesión aquí</a></p>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}